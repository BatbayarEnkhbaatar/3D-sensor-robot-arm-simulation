<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:property name="PI" value="3.14159"/>
    <xacro:property name="effort" value="30.0"/>
    <xacro:property name="velocity" value="10.0"/>  

    <!-- Macro function for inertial -->
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
        </inertial>
    </xacro:macro>
  
    <!-- Fingers Visualization on Gazebo  -->
    <link name="gripper_house">
        <visual>
            <origin rpy="0 -1.5708 0" xyz="0.05 0 0"/>
            <geometry>
                <mesh filename="package://yaskawa_mh5_description/meshes/mh5/gripper/housing.stl" scale = "0.0018 0.0018 0.0018"/>
            </geometry>
        </visual>
    </link>

    <link name="gripper_finger1">
        <visual>
            <origin rpy="0 0 1.72" xyz="0.342 -0.23 -0.011"/>
            <geometry>
                <mesh filename="package://yaskawa_mh5_description/meshes/mh5/gripper/clamp1.stl" scale = "0.0018 0.0018 0.0018"/>
            </geometry>
        </visual>
    </link>

   <link name="gripper_finger2">
        <visual>
             <origin rpy="0.02 0.25 1.25" xyz="0.292 -0.19 -0.03"/>
            <geometry>
                <mesh filename="package://yaskawa_mh5_description/meshes/mh5/gripper/clamp2.stl" scale = "0.0018 0.0018 0.0018"/>
            </geometry>
        </visual>
    </link>


    <link name="gripper_finger3">
        <visual>
            <origin rpy="0 0 3.8144" xyz="0.03 0 0"/>
            <geometry>
                <mesh filename="package://yaskawa_mh5_description/meshes/mh5/gripper/clamp3.stl" scale = "0.0018 0.0018 0.0018"/>
            </geometry>
        </visual>
    </link> 


    <!-- Gripper joints -->
    <joint name="joint_a" type="revolute">
        <parent link="link_t"/>
        <child link="gripper_house"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <limit lower="-${PI/2}" upper="0.0" effort="${effort}" velocity="${velocity}"/>
    </joint>
    
    <joint name="joint_finger1" type="revolute">
        <parent link="gripper_house"/>
        <child link="gripper_finger1"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <limit lower="0.0" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>

    </joint>
  
    <joint name="joint_finger2" type="revolute">
        <parent link="gripper_house"/>
        <child link="gripper_finger2"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <limit lower="0.0" upper="${PI}" effort="${effort}" velocity="${velocity}"/>

    </joint>

    <joint name="joint_finger3" type="revolute">
        <parent link="gripper_house"/>
        <child link="gripper_finger3"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <limit lower="0.0" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
         <!-- <mimic joint="joint_a" multiplier="-1"/>  -->
     </joint> 
</robot>
