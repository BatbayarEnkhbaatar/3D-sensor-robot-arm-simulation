<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:property name="PI" value="3.14159"/>
    <xacro:property name="effort" value="30.0"/>
    <xacro:property name="velocity" value="10.0"/>  

    <!-- Macro function for inertial -->
    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
        </inertial>
    </xacro:macro>
  
    <!-- Fingers Visualization on Gazebo  -->
    <link name="gripper_right">
        <visual>
            <origin rpy="0 0 0" xyz="0.03 0 0"/>
            <geometry>
                <mesh filename="package://yaskawa_mh5_description/meshes/mh5/collision/finger_right.stl" scale="0.002 0.005 0.005" />
            </geometry>
        </visual>
    </link>

    <link name="gripper_left">
        <visual>
            <origin rpy="0 0 0" xyz="0.03 0 0"/>
            <geometry>
                <mesh filename="package://yaskawa_mh5_description/meshes/mh5/collision/finger_left.stl" scale="0.002 0.005 0.005" />
            </geometry>
        </visual>
    </link>

    <!-- Gripper joints -->
    <joint name="joint_a" type="revolute">
        <parent link="link_t"/>
        <child link="gripper_right"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <limit lower="-${PI/2}" upper="0.0" effort="${effort}" velocity="${velocity}"/>
    </joint>
    
    <joint name="joint_y" type="revolute">
        <parent link="link_t"/>
        <child link="gripper_left"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <limit lower="0.0" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
        <mimic joint="joint_a" multiplier="-1"/>
    </joint>
    
</robot>
